# Main zsh configuration file
# This file sources modular configuration files

# Path to this configuration
export ZDOTDIR="${ZDOTDIR:-$HOME/.dotfiles/configs/shell/zsh}"

# Enable Powerlevel10k instant prompt. Should stay close to the top of ~/.zshrc.
# Initialization code that may require console input (password prompts, [y/n]
# confirmations, etc.) must go above this block; everything else may go below.
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

# Set up the prompt
autoload -Uz promptinit
promptinit

# Load Oh My Zsh
export ZSH="$HOME/.oh-my-zsh"

# Set name of the theme to load
ZSH_THEME="ys"

# Which plugins would you like to load?
plugins=(
    git
    zsh-autosuggestions
    zsh-syntax-highlighting
    fzf
    direnv
)

source $ZSH/oh-my-zsh.sh

# Source modular configuration files
for config_file in "$ZDOTDIR"/*.zsh; do
    if [[ -f "$config_file" && "$(basename "$config_file")" != "zshrc" ]]; then
        source "$config_file"
    fi
done

# Source local configuration if it exists
if [[ -f "$HOME/.dotfiles/local/zsh/local.zsh" ]]; then
    source "$HOME/.dotfiles/local/zsh/local.zsh"
fi

# Load z.sh for directory jumping
if [[ -f "$HOME/z.sh" ]]; then
    source "$HOME/z.sh"
fi

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh 